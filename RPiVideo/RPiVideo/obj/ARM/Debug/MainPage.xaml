<Page
    x:Class="RPiVideo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RPiVideo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:w="using:RPiVideo"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="white" HorizontalAlignment="Left" VerticalAlignment="Top" Width="800" Height="480">
            <WebView x:ConnectionId='1' w:HtmlBindingExtension.HTML="{Binding HTML}"
                x:Name="web1"
                HorizontalAlignment="Left" Height="402" Margin="10,68,0,0" VerticalAlignment="Top" Width="780"/>
            <Button x:ConnectionId='2' 
                               
                x:Name="Go" Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="53"/>
            <TextBlock x:ConnectionId='3' x:Name="text1" HorizontalAlignment="Left" Margin="96,43,0,0" TextWrapping="Wrap" 
                       Text="http://moonmile.net/blog/" VerticalAlignment="Top" Width="476"/>

        </Grid>
    </Grid>
</Page>

